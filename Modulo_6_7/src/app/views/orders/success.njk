{% extends 'layout.njk' %}
{% import 'parts/card.njk' as cards %}

{% block content %}



{% call cards.render('', 'orders-success container') %}

  <div class='success-lottie'></div>

  <h2>Pedido realizado com sucesso</h2>
  <p>Aguarde o contato do vendedor pelo seu email cadastrado.</p>

  <a href='/products/search'>Continuar comprando</a>

{% endcall %}

<script src='/lottie.min.js'></script>
<script>
  const element = document.querySelector('.success-lottie')

  lottie.loadAnimation({
    container: element, // the dom element that will contain the animation
    renderer: 'svg',
    loop: false,
    autoplay: true,
    path: '/5449-success-tick.json' // the path to the animation json
  }).setSpeed(1.5)
</script>

{% endblock content %}