{% extends 'layout.njk' %}
{% import 'parts/card.njk' as cards %}

{% block content %}

  {% call cards.render('', 'orders-error container') %}

    <div class='error-lottie'></div>

    <h2>O pedido não pôde ser processado</h2>

    <p>Algum erro inesperado impediu a compra do produto desejado.</p>

    <a href='#' onclick='history.back()'>Tente novamente</a>

  {% endcall %}

  <script src='/lottie.min.js'></script>
  <script>
    const element = document.querySelector('.error-lottie')

    lottie.loadAnimation({
      container: element, // the dom element that will contain the animation
      renderer: 'svg',
      loop: false,
      autoplay: true,
      path: '/16605-error.json' // the path to the animation json
    });
  </script>

{% endblock content %}