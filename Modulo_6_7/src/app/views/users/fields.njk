<div class='item'>

  <div>Nome</div>
  
  <div class='input'>

    <input 
      type='text' 
      name='name'
      placeholder='Digite o seu nome completo' 
      value='{{user.name}}'
      required>
  </div>

</div>

<div class='item'>

  <div>Email</div>
  
  <div class='input'>

    <input 
      type='email' 
      name='email'
      placeholder='exemplo@exemplo.com' 
      value='{{user.email}}'
      onblur="Validate.apply(this, 'isEmail')"
      >
  </div>

</div>

<div class='item'>

  <div>Senha</div>
  
  <div class='input'>

    <input 
      type='password' 
      name='password'
      {% if not user.id %}
      placeholder='Escolha uma senha'
      {% else %}
      placeholder='Digite sua senha para atualizar'
      {% endif %} 
      >
  </div>

</div>

{% if not user.id %}

  <div class='item'>

    <div>Repetir senha</div>
    
    <div class='input'>

      <input 
        type='password' 
        name='passwordRepeat'
        placeholder='Digite novamente a senha' 
        >
    </div>

  </div>

{% endif %}

<div class='item'>

  <div>CPF/CNPJ</div>
  
  <div class='input'>

    <input 
      type='text' 
      name='cpf_cnpj'
      placeholder='Digite seu documento' 
      value='{{user.cpf_cnpj}}'
      onkeydown="Mask.apply(this, 'cpfCnpj')"
      onblur="Validate.apply(this, 'isCpfCnpj')"
      >
  </div>

</div>

<div class='item'>

  <div>CEP</div>
  
  <div class='input'>

    <input 
      type='text' 
      name='cep'
      placeholder='00000-000' 
      value='{{user.cep}}'
      onkeydown="Mask.apply(this, 'cep')"
      onblur="Validate.apply(this, 'isCep')"
      >
  </div>

</div>

<div class='item'>

  <div>Endereço</div>
  
  <div class='input'>

    <input 
      type='text' 
      name='adress'
      placeholder='Digite seu endereço completo' 
      value='{{user.adress}}'>
  </div>

</div>