<div class='item'>

  <div>Email</div>
  
  <div class='input'>

    <input 
      type='email' 
      name='email'
      placeholder='exemplo@exemplo.com' 
      value='{{user.email}}'
      onblur="Validate.apply(this, 'isEmail')"
      >
  </div>

</div>

<div class='item'>

  <div>Nova senha</div>
  
  <div class='input'>

    <input 
      type='password' 
      name='password'
      placeholder='Digite uma nova senha'
      >
  </div>

</div>

<div class='item'>

  <div>Repetir senha</div>
  
  <div class='input'>

    <input 
      type='password' 
      name='passwordRepeat'
      placeholder='Digite novamente a senha' 
      >
  </div>

</div>

<input type='hidden' name='token' value='{{token}}'>
