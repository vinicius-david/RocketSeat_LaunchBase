{% extends 'foodfy/layout.njk' %}

{% block content %}

<div class='show-content'>

  <div class='gallery'>

    <div class='highlight'>
      {% if not files[0] %}
        <img src='http://placehold.it/500x500?text=Produto sem foto'>
      {% else %}
        <img src='{{files[0].src}}' alt='{{files[0].name}}'>
      {% endif %}
    </div>

    <div class='gallery-preview'>
      {% for image in files %}
        <img 
          src='{{image.src}}' 
          alt='{{image.name}}'
          onclick="ImageGallery.setImage(event)"
          {% if loop.index0 == 0 %}
          class="active"
          {%endif%}
        >
      {% endfor %}
    </div>    

  </div>

  <div class='title'>
    {{recipe.title}}
  </div>

  <div class='author'>
    por {{recipe.chef_name}}
  </div>


  <div class='ingredients'>

    <div class='ingredients-head'>
      <h1>Ingredientes</h1>
      <button class='visibility'>Esconder</button>
    </div>

    <div class='ingredients-text show-hide'>
      <ul>
       {% for ingredient in recipe.ingredients %}
        <li>{{ingredient}}</li>
        {% endfor %}
      </ul> 
    
    </div>
  </div>


  <div class='preparation'>

    <div class='preparation-head'>
      <h1>Modo de preparo</h1>
      <button class='visibility'>Esconder</button>
    </div>

    <div class='preparation-text show-hide'>
      <ul>
       {% for preparation in recipe.preparation %}
        <li>{{preparation}}</li>
        {% endfor %}
      </ul> 
    </div>
  </div>


  <div class='information'>

    <div class='information-head'>
      <h1>Informações adicionais</h1>
      <button class='visibility'>Esconder</button>
    </div>

    <div class='information-text show-hide'>
      {{recipe.information | striptags(true) | escape | nl2br}}
    </div>
  </div>

</div>

{% endblock content %}