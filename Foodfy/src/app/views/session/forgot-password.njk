{% extends 'session/layout.njk' %}

{% block content %}

<form method='POST' action='/users/forgot-password'>

  <div class='title'>
    <h2>Esqueceu a senha?</h2>
  </div>

  <div class='fields'>

    <h3>Email</h3>

    <div class='input'>
      <input name='email' type='text' placeholder='Digite seu email' value='{{user.email}}' onblur="Validate.apply(this, 'isEmail')">
    </div>

  </div>

  <div class='submit'>

    <div>
      <button type='submit'>Recuperar</button>
    </div>

  <div>

</form>

{% endblock content %}