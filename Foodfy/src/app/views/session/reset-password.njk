{% extends 'session/layout.njk' %}

{% block content %}

<form method='POST' action='/users/reset-password'>

  <div class='title'>
    <h2>Nova senha</h2>
  </div>

  <div class='fields'>

    <h3>Email</h3>

    <div class='input'>
      <input name='email' type='text' placeholder='Digite seu email' value='{{user.email}}' onblur="Validate.apply(this, 'isEmail')">
    </div>

  </div>

  <div class='fields'>

    <h3>Nova senha</h3>

    <div class='input'>
      <input name='password' type='password' placeholder='Digite sua nova senha'>
    </div>

  </div>

  <div class='fields'>

    <h3>Repetir senha</h3>

    <div class='input'>
      <input name='passwordRepeat' type='password' placeholder='Repita a nova senha'>
    </div>

  </div>

  <div class='submit'>

    <div>
      <button type='submit'>Nova senha</button>
      <input type='hidden' name='token' value='{{token}}'>

    </div>

  <div>


</form>

{% endblock content %}