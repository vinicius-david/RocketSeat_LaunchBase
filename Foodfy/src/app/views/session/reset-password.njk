{% extends 'session/layout.njk' %}

{% block content %}

<form method='POST' action='/users/reset-password'>

  <div class='title'>
    <h2>Nova senha</h2>
  </div>

  <div class='fields'>

    <h3>Email</h3>

    <div class='input'>
      <input name='email' type='text' placeholder='Digite seu email'>
    </div>

  </div>

  <div class='fields'>

    <h3>Nova senha</h3>

    <div class='input'>
      <input name='password' type='text' placeholder='Digite sua nova senha'>
    </div>

  </div>

  <div class='fields'>

    <h3>Repetir senha</h3>

    <div class='input'>
      <input name='password' type='text' placeholder='Repita a nova senha'>
    </div>

  </div>

  <div class='submit'>

    <div>
      <button type='submit'>Nova senha</button>
    </div>

  <div>

</form>

{% endblock content %}