{% extends 'admin/layout.njk' %}

{% block content %}

<form method='POST' action='/admin/users/:id?_method=PUT'>

<div class='user-header-container'>

  <div class='user-header-title'>
    <h2>Bem vindo {{user.name}}</h2>
  </div>

  <div class='buttons'>
    <a href='/admin/users/{{user.id}}/edit'>Editar</a>
  </div>


</div>

<div class='user-fields-container'>

  <div class='user-fields'>

    <h3>Nome</h3>

    <div class='input'>
      <input name='name' type='text' value='{{user.name}}'>
    </div>

  </div>

  <div class='user-fields'>

    <h3>Email</h3>

    <div class='input'>
      <input name='email' type='text' value='{{user.email}}'>
    </div>

  </div>

  <div class='user-fields'>

    <h3>Senha</h3>

    <div class='input'>
      <input name='password' type='text' placeholder='Digite a senha'>
    </div>

  </div>

</div>

</form>

{% endblock content %}