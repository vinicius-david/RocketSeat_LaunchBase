{% extends 'admin/layout.njk' %}

{% block content %}

<div>

  <div class='user-header-container'>

    <div class='user-header-title'>
      <h2>Usu√°rios</h2>
    </div>

    <div class='buttons'>
      <a class='new-button' href='/admin/users/create'>Novo</a>
    </div>


  </div>

  <div class='users-container'>

    {% for user in users %}

      <div class='user'>

        <div class='name'>
          <h3>{{user.name}}</h3>
        </div>

        <div class='email'>
          <h3>{{user.email}}</h3>
        </div>

        <div class='links'>
          <a class='edit' href='/admin/users/{{user.id}}/edit'>Editar</a>

          <form method='POST' action='/admin/users/{{user.id}}/edit?_method=DELETE'>
            <button type='submit'>Remover</button>
            <input type='hidden' name='id' value={{user.id}}>
          </form>

        </div>

      </div>

    {% endfor %}

  </div>
  

</div>

{% endblock content %}