<div class='fields'>

  <div class='image-field'>
  
    <p>Imagem da receita</p>
    <input name='image' type='text' value='{{recipe.image}}'>

  </div>

  <div>
  
    <p>Título</p>
    <input name='title' type='text' value={{recipe.title}}>
  
  </div>

  <div>
  
    <p>Chef</p>

    <div>

    <select name='chef_id'>

      {% for chef in chefs %}

        <option value='{{chef.id}}' {% if recipe.chef_id == chef.id %}selected{% endif %}>
          {{chef.name}}
        </option>

      {% endfor %}

    </select>

  </div>
  
  </div>

  <div id='ingredients'>
  
    <p>Ingredientes</p>

    <div>

      {% for ingredient in recipe.ingredients %}
        <input name='ingredients' type='text' value='{{ingredient}}'>
      {% endfor %}

    </div>

    <div class='ingredient'>

      <input name='ingredients[]' type='text' value='{{ingredient}}'>

    </div>
  
  </div>

  <div>
    <button type='button' class='add-ingredient'>Adicionar novo ingrediente</button>
  </div>

  <div id='preparations'>
  
    <p>Modo de preparo</p>

    <div>

      {% for preparation in recipe.preparation %}
        <input name='preparation[]' type='text' value='{{preparation}}'>
      {% endfor %}

    </div>

    <div  class='preparation'>

      <input name='preparation[]' type='text' value='{{preparation}}'>
    
    </div>
  
  </div>

  <div>
    <button type='button' class='add-preparation'>Adicionar novo passo</button>
  </div>

  <div>
  
    <p>Informações adicionais</p>
    <textarea name='information'>{{recipe.information}}</textarea>
  
  </div>

</div>