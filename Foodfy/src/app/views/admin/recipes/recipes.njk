{% extends 'admin/layout.njk' %}

{% block content %}

<div class='recipes-title'>

  Gerenciar receitas

  <a href='/admin/recipes/create'><button>Adicionar receita</button></a>

</div>

<div class='all-recipes'>

  {% for recipe in recipes %}

    <div class='recipes'>

      <div class='recipe-img'>

        {% if file.recipe_id == recipe.id %}
          <a><img src={{file.src}} alt={{file.name}}></a>
        {% endif %}
        
      </div>

      <div class='recipe-info'>
        <h2>{{recipe.title}}</h2>
        <h3>por {{recipe.chef_name}}</h3>
        <a href='/admin/recipes/{{recipe.id}}'>Visualizar</a>
      </div>

    </div>

  {% endfor %}

</div>

{% endblock content %}