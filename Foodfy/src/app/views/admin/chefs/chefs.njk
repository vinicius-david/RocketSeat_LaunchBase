{% extends 'admin/layout.njk' %}

{% block content %}

<div class='recipes-title'>

  Gerenciar chefs

  <a href='/admin/chefs/create'><button>Adicionar chef</button></a>

</div>

<div class='all-chefs'>

  {% for chef in chefs %}

    <div class='chef'>

      <div class='chef-img'>
        <a><img src={{chef.avatar_url}} alt={{chef.name}}></a>
      </div>

      <div class='chef-info'>
        <h2>{{chef.name}}</h2>
        <a href='/admin/chefs/{{chef.id}}'>Visualizar</a>
      </div>

    </div>

  {% endfor %}

</div>

{% endblock content %}