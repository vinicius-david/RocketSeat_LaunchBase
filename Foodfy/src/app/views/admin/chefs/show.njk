{% extends 'admin/layout.njk' %}

{% block content %}

<div class='recipes-title'>

  Chef: {{chef.name}}

  <a href='/admin/chefs/{{chef.id}}/edit'><button>Editar chef</button></a>

</div>

<div class='show-chef-content'>

  <div class='chef-image'>
    <img src={{file[0].src}}>
  </div>

  <div class='chef-title'>
    {{chef.name}}
  </div>

  <div class='chef-n-recipes'>
    {{chef.total_recipes}} receitas
  </div>

</div>

<div class='chef-recipes-title'>
  <h2>Receitas</h2>
</div>

<div class='chef-recipes'>

  {% for recipe in recipes %}

  <div class='chef-recipe'>
    <div class='recipe-img'>
      <a><img src={{recipe.image}} alt={{recipe.title}}></a>
    </div>

    <div class='recipe-info'>
      <h2>{{recipe.title}}</h2>
      <h3>por {{recipe.chef_name}}</h3>
      <a href='/admin/recipes/{{recipe.id}}'>Visualizar</a>
    </div>
  </div>

  {% endfor %}

</div>

{% endblock content %}