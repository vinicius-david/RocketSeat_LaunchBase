<div class='item'>

  <div>Categoria</div>

  <div>

    <select name='category_id'>

      {% for category in categories %}

        <option value='{{category.id}}' {% if product.category_id == category.id %}selected{% endif %}>
          {{category.name}}
        </option>

      {% endfor %}

    </select>

  </div>
</div>

<div class='item'>

  <div>Nome</div>
  
  <div>

    <input 
      type='text' 
      name='name'
      placeholder='Digite o título do anúncio' 
      value='{{product.nome}}'>
  </div>

</div>

<div class='item'>

  <div>Descrição</div>
  
  <div>

    <textarea name='description'>
      {{product.description}}
    </textarea>
    
  </div>

</div>

{# CAMPO DE FOTOS #}

<div class='item'>

  <div>Valor</div>
  
  <div>

    <input 
      type='text' 
      name='price'
      placeholder='Digite o preço'
      value='{{product.price}}'>
  </div>

  {% if product.old_price %}
    <input type='hidden' name='old_price' value='{{product.old_price}}'>
  {% endif %}

</div>

<div class='item'>

  <div>Quantidade</div>
  
  <div>

    <input 
      type='number' 
      name='quantity'
      placeholder='Estoque disponível'
      value='{{product.quantity}}'>
  </div>

</div>

{% if product.status %}

  <div class='item'>

    <div>Disponibilidade</div>

    <div>

      <span>
        <input 
          type='radio' 
          name='status' 
          value='1' 
          {% if product.status == 1 %}checked{% endif %}>Em estoque
      </span>

      <span>
        <input 
          type='radio' 
          name='status' 
          value='0' 
          {% if product.status == 0 %}checked{% endif %}>Em falta
      </span>

    </div>
  </div>

{% endif %}